<%= stylesheet_link_tag "https://getbootstrap.com/docs/4.0/examples/signin/signin.css" %>
<div class="container">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
		<div class="form-signin">
			<h2>Log in</h2>
              <%= f.label :email, class: "sr-only"%>
              <%= f.text_field :email, required: false, autofocus: true, class: "form-control", placeholder: "Email address" %>
              <br/>
              <%= f.label :password, class: "sr-only"%>
              <%= f.password_field :password, required: false, class: "form-control", placeholder: "Password" %>
        </div>

        <div class="form-actions">
           <%= f.submit t(".sign_in"), class: "btn btn-lg btn-primary btn-block" %>
           <%= render "devise/shared/links" %>
        </div>
    <% end %>
</div>


